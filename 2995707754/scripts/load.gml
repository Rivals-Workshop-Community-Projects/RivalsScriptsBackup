if get_player_color(player) == 5 || get_player_color(player) == 6 || get_player_color(player) == 8 {
	set_victory_portrait( sprite_get( "portrait_toned" ));
}

//EA and cover
if get_player_color(player) == 7 {
	set_victory_portrait( sprite_get( "portrait_ea" ));		
} else {
	if get_player_color(player) == 19 {
		set_victory_portrait( sprite_get( "portrait_cover" ));		
	} else {
		if get_player_color(player) == 26{
			set_victory_portrait( sprite_get( "portrait_manga" ));		
		} else {
			if get_player_color(player) == 27{
				set_victory_portrait( sprite_get( "portrait_WTF" ));		
			} else {
				//dio
				if get_player_color(player) == 20 {
					set_victory_portrait( sprite_get( "portrait_dio" ));		
				} else { set_victory_portrait( sprite_get( "portrait" )); }
			}
		}
	}
